# ===== 应用配置 =====
APP_NAME=MyRAG
APP_VERSION=0.1.0
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# ===== 数据库配置 =====
DATABASE_URL=sqlite+aiosqlite:///./data/myrag.db

# ===== LLM 配置 =====
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=sk-your-api-key-here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.7

# ===== Embedding 配置 =====
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DIMENSION=1024

# ===== 分块配置 =====
CHUNK_SIZE=512
CHUNK_OVERLAP=50
CHUNK_STRATEGY=recursive

# ===== 文件存储 =====
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=52428800

